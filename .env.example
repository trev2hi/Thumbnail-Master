# =============================================================================
# Thumbnail Viewer - Environment Configuration Example
# =============================================================================
# Copy this file to .env and customize as needed.
# All settings are optional and have sensible defaults.
#
# IMPORTANT: Never commit your actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Settings
# -----------------------------------------------------------------------------

# Enable debug mode (set to "true", "1", or "yes" to enable)
# Default: false (disabled)
# WARNING: Never enable debug mode in production!
FLASK_DEBUG=false

# Server host address
# Default: 127.0.0.1 (localhost only - recommended for security)
FLASK_HOST=127.0.0.1

# Server port number
# Default: 5000
FLASK_PORT=5000

# Secret key for Flask sessions (auto-generated if not set)
# Generate with: python -c "import os; print(os.urandom(24).hex())"
# SECRET_KEY=your-secret-key-here
